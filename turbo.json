{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^dev", "^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "dependsOn": ["^db:push"],
      "cache": false
    },
    "test:e2e": {
      "cache": false
    }
  }
}
